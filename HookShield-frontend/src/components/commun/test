<template>
  <div
    v-if="selectedEmail"
    class="email-modal"
  >
    <!-- En-tête avec bouton de fermeture -->
    <div class="modal-header">
      <h2 class="modal-title">
        <i class="fas fa-envelope"></i>
        Détails du Mail
      </h2>
      <button
        @click="closeModal"
        class="close-btn"
        title="Fermer"
      >
        <i class="fas fa-times"></i>
      </button>
    </div>

    <!-- Contenu détaillé du mail -->
    <div class="email-content">
      <div class="email-field">
        <span class="field-label">De :</span>
        <span class="field-value">{{ selectedEmail.sender }}</span>
      </div>
      
      <div class="email-field">
        <span class="field-label">À :</span>
        <span class="field-value">{{ selectedEmail.recipient }}</span>
      </div>
      
      <div class="email-field">
        <span class="field-label">Objet :</span>
        <span class="field-value">{{ selectedEmail.subject }}</span>
      </div>
      
      <div class="email-body-container">
        <div class="email-field">
          <span class="field-label">Contenu :</span>
        </div>
        <div class="email-body">
          {{ email_body }}
        </div>
      </div>
    </div>

    <div class="button-group">
      <button 
        v-if="selectedEmail.blockReason !== 'No phishing detected'"
        @click="closeModal"
        class="btn btn-primary"
      >
        <i class="fas fa-shield-alt"></i>
        Déclarer comme non phishing
      </button>
      
      <button
        @click="closeModal"
        class="btn btn-danger"
      >
        <i class="fas fa-times"></i>
        Fermer
      </button>
    </div>
  </div>
</template>

<script>
export default {
  props: {
    selectedEmail: Object,
    email_body: String
  },
  methods: {
    closeModal() {
      this.$emit('close');
    }
  }
}
</script>

